<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appToolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/colorDarkBlue">

    <Button
        android:id="@+id/buttonToolbarBack"
        android:background="@drawable/ic_back_white"
        style="@style/ToolbarButton"/>

    <TextView
        android:id="@+id/textViewToolbarLoggedInEmail"
        android:layout_alignRight="@id/buttonToolbarLogout"
        style="@style/WrapContent.ToolbarEmailTextView" />

    <Button
        android:id="@+id/buttonToolbarLogout"
        android:background="@drawable/ic_logout_white"
        android:layout_alignParentRight="true"
        style="@style/ToolbarButton"/>

</RelativeLayout>
