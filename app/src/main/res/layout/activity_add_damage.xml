<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutAddDamageContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddDamageActivity">

    <include layout="@layout/layout_toolbar"/>

    <Button
        android:id="@+id/buttonAddDamageRemoveAllDamages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appToolbar"
        android:layout_margin="@dimen/half_normal_margin"
        android:background="@color/colorLightBlue"
        android:text="@string/add_damage_remove_all_damages"/>

    <ImageView
        android:id="@+id/imageViewAddDamageCarTemplate"
        android:layout_below="@id/buttonAddDamageRemoveAllDamages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/normal_margin"
        android:background="@drawable/img_car_template"/>

</RelativeLayout>