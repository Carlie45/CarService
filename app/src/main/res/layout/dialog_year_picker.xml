<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogLayout">

    <NumberPicker
        android:id="@+id/numberPickerYear"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_margin="@dimen/normal_margin"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_below="@+id/numberPickerYear"
        android:orientation="horizontal"
        style="@style/FullWidth">

        <Button
            android:id="@+id/buttonYearPickerDialogCancel"
            android:layout_alignParentLeft="true"
            android:text="@string/add_car_cancel"
            style="@style/FillRemainingSpaceButton"/>

        <Button
            android:id="@+id/buttonYearPickerDialogSelect"
            android:layout_alignParentRight="true"
            android:text="@string/add_car_select"
            style="@style/FillRemainingSpaceButton"/>

    </LinearLayout>



</RelativeLayout>
