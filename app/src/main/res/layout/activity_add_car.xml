<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.AddCarActivity"
    style="@style/MatchParent">

    <include layout="@layout/layout_toolbar"/>

    <ScrollView
        android:id="@+id/scrollViewAddCarListInputFieldsForCar"
        android:layout_below="@id/appToolbar"
        android:fillViewport="false"
        style="@style/FullWidth">

        <LinearLayout
            android:orientation="vertical"
            style="@style/FullWidth">

            <TextView
                android:id="@+id/textViewAddCarBrand"
                android:text="@string/add_car_brand"
                style="@style/WrapContent.PropertyLabel"/>

            <EditText
                android:id="@+id/editTextAddCarBrand"
                android:hint="@string/add_car_brand"
                style="@style/WrapContent.PropertyLabel.EditText" />

            <TextView
                android:id="@+id/textViewAddCarModel"
                android:text="@string/add_car_model"
                style="@style/WrapContent.PropertyLabel"/>

            <EditText
                android:id="@+id/editTextAddCarModel"
                android:hint="@string/add_car_model"
                style="@style/WrapContent.PropertyLabel.EditText" />

            <TextView
                android:id="@+id/textViewAddCarColour"
                android:text="@string/add_car_colour"
                style="@style/WrapContent.PropertyLabel"/>

            <EditText
                android:id="@+id/editTextAddCarColour"
                android:hint="@string/add_car_colour"
                style="@style/WrapContent.PropertyLabel.EditText" />

            <TextView
                android:id="@+id/textViewAddCarDoorsCount"
                android:text="@string/add_car_doors_count"
                style="@style/WrapContent.PropertyLabel"/>

            <EditText
                android:id="@+id/editTextAddCarDoorsCount"
                android:hint="@string/add_car_doors_count"
                android:inputType="number"
                style="@style/WrapContent.PropertyLabel.EditText"/>

            <TextView
                android:id="@+id/textViewAddCarYearOfManufacture"
                android:text="@string/add_car_year_of_manufacture"
                style="@style/WrapContent.PropertyLabel"/>

            <LinearLayout
                style="@style/FullWidth">

                <TextView
                    android:id="@+id/textViewAddCarShowSelectedYearOfManufacture"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/WrapContent.PropertyLabel" />

                <Button
                    android:id="@+id/buttonAddCarSelectYearOfManufacture"
                    android:padding="8dp"
                    android:text="@string/add_car_pick_year"
                    android:background="@color/colorLightGrey"
                    style="@style/FillRemainingSpace.NormalMargin"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textViewAddCarCarOwner"
                android:text="@string/add_car_car_owner"
                style="@style/WrapContent.PropertyLabel"/>

            <LinearLayout
                style="@style/FullWidth">

                <Spinner
                    android:id="@+id/spinnerAddCarSelectCarOwner"
                    android:layout_marginLeft="@dimen/normal_margin"
                    style="@style/FillRemainingSpace"/>

                <Button
                    android:id="@+id/buttonAddCarAddCarOwner"
                    android:text="@string/add_car_add_new_owner"
                    android:background="@color/colorLightGrey"
                    style="@style/FillRemainingSpace"/>

            </LinearLayout>

            <Button
                android:id="@+id/buttonAddCarCreateNewCar"
                android:text="@string/add_car_create"
                style="@style/FullWidth.Button"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>